<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content" style="padding: 30px">
      <div style="list-style-type: none;">
          <div>
            <div style="display: flex;justify-content: space-between;" class="mb-3">
              <h3>Questions</h3>
              <h3>Answers</h3>
            </div>
          </div>
          <% @questions.each do |question| %>
            <div>
              <div style="display: flex;justify-content: space-between;" class="mb-1">
                <p class="mytableoverflow"><%= question.content %></p>
                <% correct_answer = question.answers.find_by(correct: true) %>
                <p class="mytableoverflow" ><%= correct_answer ? correct_answer.content : 'No correct answer available' %></p>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
