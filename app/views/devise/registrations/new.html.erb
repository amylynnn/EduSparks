<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mt-4 mb-4 text-center">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'simple-form' }) do |f| %>
        <%= f.error_notification %>

        <div class="mb-3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label_html: { class: 'form-label' },
                      input_html: { class: 'form-control', autocomplete: 'email' } %>
        </div>

        <div class="mb-3">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      label_html: { class: 'form-label' },
                      input_html: { class: 'form-control', autocomplete: 'new-password' } %>
        </div>

        <div class="mb-3">
          <%= f.input :password_confirmation,
                      required: true,
                      label_html: { class: 'form-label' },
                      input_html: { class: 'form-control', autocomplete: 'new-password' } %>
        </div>

        <div class="text-center">
          <%= f.button :submit, "Sign up", class: 'btn btn-purple' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
