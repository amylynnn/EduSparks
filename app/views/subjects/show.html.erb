
<div class="container-topic">
  <div class="main-container p-4" >
    <h1 class="mb-3">Topics</h1>
    <h2><%= @subject.name %></h2>
  </div>

  <div class="card mx-auto bg-light" style="width: 70rem;">
    <div class="form-group">
    <% @quizzes.each do |quiz| %>
      <div class="card2-subject-infos d-flex justify-content-between p-4">
        <h3><%= quiz.name %></h3>
        <div class="d-flex mx-2">
        <%= link_to "Start", quiz_path(quiz), class: "btn btn-flat" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div>
  <p><%= @response %></p>
</div>
