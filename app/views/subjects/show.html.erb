
<div class="container-topic">
  <div class="main-container p-4" >
    <h1 class="mb-3">Topics</h1>
    <h2><%= @subject.name %></h2>
  </div>

<div class="card4 mx-auto" style="width: 40rem;">
  <div>
      <%= form_with url: subject_path(@subject), method: :get do |f| %>
        <%= f.text_area :query, rows: 4, cols: 60, placeholder: " Ask me anything about #{@subject.name}...", class: "text-area" %>
        <div class="btn-ai">
          <%= f.submit "Ask", class:"btn btn-dark btn btn-lg mt-3" %>
        </div>
      <% end %>
    <% unless @response.nil? %>
      <div class="mt-3 card card-body">
        <p><%= @response['choices'][0]['message']['content'] %></p>
      </div>
    <% end %>
  </div>
</div>
<br>

  <div class="card mx-auto bg-light m-3" style="width: 70rem;">
    <div class="form-group">
    <% @quizzes.each do |quiz| %>

      <div class="card2-subject-infos d-flex justify-content-between p-4">
        <ul>
          <li>
            <h2 class="fw-bold"><%= quiz.name %></h2>
          </li>
        </ul>
        <div class="d-flex mx-2">
          <%= link_to "Start", quiz_question_path(quiz, quiz.questions.first), class: "btn btn-flat" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<br>
